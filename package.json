{
  "name": "apple-gamecenter-identity-verifier",
  "version": "1.0.0",
  "description": "A small library to verify the identity of apple-gamecenter's local player for consuming it in node.js backend server.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Aminoiz <mr.amini0076@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aminoiz/apple-gamecenter-identity-verifier.git"
  },
  "bugs": {
    "url": "https://github.com/aminoiz/apple-gamecenter-identity-verifier/issues"
  },
  "homepage": "https://github.com/aminoiz/apple-gamecenter-identity-verifier#readme",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
